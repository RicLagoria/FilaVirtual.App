<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FilaVirtual.App.ViewModels"
             xmlns:models="clr-namespace:FilaVirtual.App.Models"
             x:Class="FilaVirtual.App.Views.MenuPage"
             x:DataType="vm:MenuVM"
             Title="Menú de la Cantina"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Grid RowDefinitions="Auto,*" Padding="16">
        
        <!-- Encabezado -->
        <VerticalStackLayout Grid.Row="0" Spacing="8" Margin="0,0,0,16">
            <Label Text="Menú de la Cantina"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Start" />
            
            <Label Text="Seleccione los productos que desea pedir"
                   FontSize="16"
                   TextColor="{DynamicResource Gray600}"
                   HorizontalOptions="Start" />
            
            <!-- Barra de búsqueda -->
            <SearchBar Placeholder="Buscar productos..."
                      Text="{Binding TextoBusqueda}"
                      PlaceholderColor="{DynamicResource Gray400}"
                      TextColor="{DynamicResource Gray900}"
                      BackgroundColor="White"
                      CancelButtonColor="{DynamicResource Primary}"
                      Margin="0,8,0,0" />
            
            <!-- Mensaje sin resultados -->
            <Border IsVisible="{Binding MostrarMensajeSinResultados}"
                    BackgroundColor="#FFF3E0"
                    Stroke="#FF9800"
                    StrokeThickness="1"
                    Padding="12"
                    Margin="0,8,0,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <Label Text="{Binding MensajeSinResultados}"
                       TextColor="#E65100"
                       FontSize="14" />
            </Border>
            
            <!-- Mensaje de error -->
            <Border IsVisible="{Binding MensajeError, Converter={StaticResource StringToBoolConverter}}"
                    BackgroundColor="#FFEBEE"
                    Stroke="#EF5350"
                    StrokeThickness="1"
                    Padding="12"
                    Margin="0,8,0,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <Label Text="{Binding MensajeError}"
                       TextColor="#C62828"
                       FontSize="14" />
            </Border>
        </VerticalStackLayout>

        <!-- Indicador de carga -->
        <ActivityIndicator Grid.Row="1"
                          IsRunning="{Binding EstaCargando}"
                          IsVisible="{Binding EstaCargando}"
                          Color="{DynamicResource Primary}"
                          HeightRequest="50"
                          WidthRequest="50"
                          HorizontalOptions="Center"
                          VerticalOptions="Center" />

        <!-- Lista de menú agrupada por categoría -->
        <CollectionView Grid.Row="1"
                       ItemsSource="{Binding MenuAgrupado}"
                       IsVisible="{Binding EstaCargando, Converter={StaticResource InvertedBoolConverter}}"
                       SelectionMode="None">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="24" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:GrupoMenu">
                    <VerticalStackLayout Spacing="12">
                        
                        <!-- Encabezado de categoría -->
                        <Border BackgroundColor="{DynamicResource Primary}"
                               Padding="12,8">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="{Binding Categoria}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       VerticalOptions="Center" />
                                <Label Text="{Binding CantidadItems, StringFormat='({0} items)'}"
                                       FontSize="14"
                                       TextColor="White"
                                       Opacity="0.8"
                                       VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Border>

                        <!-- Items de la categoría -->
                        <VerticalStackLayout BindableLayout.ItemsSource="{Binding .}"
                                           Spacing="8">
                                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="models:MenuItemModel">
                                    <Border BackgroundColor="White"
                                           Stroke="{DynamicResource Gray300}"
                                           StrokeThickness="1"
                                           Padding="16,12"
                                           x:Name="ItemBorder">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="8" />
                                        </Border.StrokeShape>
                                        
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer 
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MenuVM}}, Path=AgregarAlCarritoCommand}"
                                                CommandParameter="{Binding .}" />
                                        </Border.GestureRecognizers>

                                        <!-- Indicador de agregado -->
                                        <Border x:Name="AddedIndicator"
                                               BackgroundColor="{DynamicResource Primary}"
                                               Opacity="0"
                                               IsVisible="False"
                                               Padding="8,4"
                                               HorizontalOptions="End"
                                               VerticalOptions="Start"
                                               Margin="0,0,0,0">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="12" />
                                            </Border.StrokeShape>
                                            <Label Text="✓ Agregado"
                                                   FontSize="12"
                                                   FontAttributes="Bold"
                                                   TextColor="White" />
                                        </Border>

                                        <Grid ColumnDefinitions="*,Auto">
                                            <VerticalStackLayout Grid.Column="0" Spacing="4">
                                                <Label Text="{Binding Nombre}"
                                                       FontSize="16"
                                                       FontAttributes="Bold"
                                                       TextColor="{DynamicResource Gray900}" />
                                                
                                                <Label Text="{Binding Categoria}"
                                                       FontSize="12"
                                                       TextColor="{DynamicResource Gray600}" />
                                            </VerticalStackLayout>

                                            <Label Grid.Column="1"
                                                   Text="{Binding PrecioFormateado}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                                                   TextColor="{DynamicResource Primary}"
                                                   VerticalOptions="Center"
                                                   HorizontalOptions="End" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>
                        
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>

