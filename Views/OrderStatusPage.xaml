<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FilaVirtual.App.ViewModels"
             xmlns:models="clr-namespace:FilaVirtual.App.Models"
             x:Class="FilaVirtual.App.Views.OrderStatusPage"
             x:DataType="vm:OrderStatusVM"
             Title="Estado del Pedido"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,Auto,*,Auto" Padding="16" RowSpacing="20">

            <!-- Indicador de carga -->
            <ActivityIndicator Grid.Row="0"
                              Grid.RowSpan="5"
                              IsRunning="{Binding EstaCargando}"
                              IsVisible="{Binding EstaCargando}"
                              Color="{DynamicResource Primary}"
                              HeightRequest="50"
                              WidthRequest="50"
                              HorizontalOptions="Center"
                              VerticalOptions="Center" />

            <!-- Encabezado -->
            <VerticalStackLayout Grid.Row="0" 
                                Spacing="12"
                                IsVisible="{Binding EstaCargando, Converter={StaticResource InvertedBoolConverter}}">
                <Label Text="隆Pedido Confirmado!"
                       FontSize="28"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="{DynamicResource Primary}" />
                
                <Label Text="{Binding Pedido.OrderId}"
                       FontSize="20"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                
                <Label Text="{Binding Pedido.FechaFormateada}"
                       FontSize="14"
                       TextColor="{DynamicResource Gray600}"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>

            <!-- Estado del pedido -->
            <Border Grid.Row="1"
                   BackgroundColor="{Binding EstadoColor}"
                   Padding="16"
                   IsVisible="{Binding EstaCargando, Converter={StaticResource InvertedBoolConverter}}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="4">
                    <Label Text="Estado Actual"
                           FontSize="12"
                           TextColor="White"
                           Opacity="0.8"
                           HorizontalOptions="Center" />
                    <Label Text="{Binding EstadoTexto}"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                    
                    <!-- Posici贸n en cola (solo visible si est谩 en cola) -->
                    <Border IsVisible="{Binding MostrarPosicion}"
                           BackgroundColor="#00000040"
                           Padding="12,6"
                           Margin="0,8,0,0"
                           HorizontalOptions="Center">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="16" />
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="6">
                            <Label Text=""
                                   FontSize="16"
                                   VerticalOptions="Center" />
                            <Label Text="{Binding PosicionEnCola, StringFormat='Posici贸n en cola: {0}'}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </Border>

            <!-- C贸digo QR -->
            <Border Grid.Row="2"
                   BackgroundColor="White"
                   Stroke="{DynamicResource Gray300}"
                   StrokeThickness="1"
                   Padding="20"
                   IsVisible="{Binding EstaCargando, Converter={StaticResource InvertedBoolConverter}}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="12">
                    <Label Text="C贸digo QR del Pedido"
                           FontSize="18"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                    
                    <Image Source="{Binding ImagenQR}"
                           HeightRequest="250"
                           WidthRequest="250"
                           HorizontalOptions="Center"
                           Aspect="AspectFit" />
                    
                    <Label Text="Muestra este c贸digo al retirar tu pedido"
                           FontSize="12"
                           TextColor="{DynamicResource Gray600}"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>
            </Border>

            <!-- Detalle del pedido -->
            <Border Grid.Row="3"
                   BackgroundColor="White"
                   Stroke="{DynamicResource Gray300}"
                   StrokeThickness="1"
                   Padding="16"
                   IsVisible="{Binding EstaCargando, Converter={StaticResource InvertedBoolConverter}}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="12">
                    <Label Text="Detalle del Pedido"
                           FontSize="18"
                           FontAttributes="Bold" />
                    
                    <!-- Lista de items -->
                    <CollectionView ItemsSource="{Binding Items}"
                                   SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:OrderItem">
                                <Border BackgroundColor="White"
                                       Stroke="{DynamicResource Gray300}"
                                       StrokeThickness="1"
                                       Padding="12,8"
                                       Margin="0,4">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="6" />
                                    </Border.StrokeShape>
                                    <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="12">
                                        <Label Grid.Column="0"
                                               Text="{Binding Nombre}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="{DynamicResource Gray900}"
                                               VerticalOptions="Center" />
                                        
                                        <Border Grid.Column="1"
                                               BackgroundColor="{DynamicResource Primary}"
                                               Padding="6,2"
                                               VerticalOptions="Center">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="10" />
                                            </Border.StrokeShape>
                                            <Label Text="{Binding Cantidad, StringFormat='x{0}'}"
                                                   FontSize="12"
                                                   FontAttributes="Bold"
                                                   TextColor="White" />
                                        </Border>
                                        
                                        <Label Grid.Column="2"
                                               Text="{Binding SubtotalFormateado}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="{DynamicResource Primary}"
                                               VerticalOptions="Center" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- Total -->
                    <BoxView HeightRequest="1" 
                            Color="{DynamicResource Gray300}"
                            Margin="0,8" />
                    
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0"
                               Text="Total"
                               FontSize="18"
                               FontAttributes="Bold" />
                        
                        <Label Grid.Column="1"
                               Text="{Binding Pedido.TotalFormateado}"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{DynamicResource Primary}" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Botones de acci贸n -->
            <VerticalStackLayout Grid.Row="4" 
                                Spacing="12"
                                IsVisible="{Binding EstaCargando, Converter={StaticResource InvertedBoolConverter}}">
                
                <!-- Mensaje de error -->
                <Border IsVisible="{Binding MensajeError, Converter={StaticResource StringToBoolConverter}}"
                        BackgroundColor="#FFEBEE"
                        Stroke="#EF5350"
                        StrokeThickness="1"
                        Padding="12">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Label Text="{Binding MensajeError}"
                           TextColor="#C62828"
                           FontSize="14" />
                </Border>

                <!-- Bot贸n marcar como pagado (solo visible si est谩 En Cola) -->
                <Button Text=" Marcar como Pagado (Demo)"
                        FontSize="16"
                        FontAttributes="Bold"
                        BackgroundColor="{DynamicResource Primary}"
                        TextColor="White"
                        Padding="16,12"
                        CornerRadius="8"
                        Command="{Binding MarcarComoPagadoCommand}"
                        IsVisible="{Binding Pedido.Estado, Converter={StaticResource EstadoEnColaConverter}}" />
                
                <!-- Bot贸n volver al men煤 -->
                <Button Text=" Volver al Men煤"
                        FontSize="16"
                        FontAttributes="Bold"
                        BackgroundColor="{DynamicResource Primary}"
                        TextColor="White"
                        Padding="24,12"
                        CornerRadius="8"
                        Clicked="OnVolverAlMenuClicked" />
            </VerticalStackLayout>

        </Grid>
    </ScrollView>
</ContentPage>


